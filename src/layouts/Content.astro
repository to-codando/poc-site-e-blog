---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<section>
  <h1>{title}</h1>
  <slot></slot>
</section>

<style>
  section {
    display:flex;
    flex-wrap: wrap;
    width:100%;
    padding: 1rem
  }

  section h1 {
    width:100%;
    margin:0;
    padding:0;
  }
</style>